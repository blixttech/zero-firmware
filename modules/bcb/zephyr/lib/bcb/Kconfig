config BCB_SHELL
	bool "Shell"
	default n

menuconfig BCB_COAP
	bool "CoAP"
	default n

if BCB_COAP
rsource "Kconfig.coap"
endif # BCB_COAP

config BCB_LIB_SW_MAX_CLOSING_TEMPERATURE
	int "Maximum temperature when the swtich can be closed"
	default 50

config BCB_LIB_SW_MAX_TEMPERATURE
	int "Maximum temperature that the swtich stays closed"
	default 90

config BCB_LIB_SW_VITALS_CHECK_INTERVAL
	int "Vitals monitoring interval in milliseconds"
	default 100

config BCB_TRIP_CURVE_DEFAULT
	bool "Default trip curve"
	default y

menu "Initialisation priorities"

config BCB_LIB_SIM_INIT_PRIORITY
	int "SIM initialisation priority"
	default 50

config BCB_LIB_TRIP_CURVE_DEFAULT_INIT_PRIORITY
	int "SIM initialisation priority"
	default 51
	depends on BCB_TRIP_CURVE_DEFAULT

config BCB_LIB_COAP_INIT_PRIORITY
	int "CoAP initialisation priority"
	default 56
	depends on BCB_COAP

config BCB_LIB_COAP_RESOURCE_INIT_PRIORITY
	int "CoAP resource initialisation priority"
	default 57
	depends on BCB_COAP

endmenu

menu "Timing"

config BCB_LIB_ETIME_SECOND
	int "Number of ticks for one second of the elapsed time timer"
	default 30000000

config BCB_LIB_IC_ONOFF_SECOND
	int "Number of ticks for one second of the on/off input capture timer"
	default 30000000

endmenu

menu "Measurements"

config BCB_LIB_MSMNT_RMS_SAMPLES
	int "Number of samples for RMS calculation as the power of two."
	default 7

config BCB_LIB_MSMNT_RMS_INTERVAL
	int "RMS sampling interval (ms)"
	default 1

endmenu

menu "Persistent configuration offsets/maximum sizes"

config BCB_LIB_PERSISTENT_CONFIG_OFFSET_IDENTITY
	int "Offset of the identity configurations"
	default 0

config BCB_LIB_PERSISTENT_CONFIG_SIZE_IDENTITY
	int "Max size of the identity configurations"
	default 40

config BCB_LIB_PERSISTENT_CONFIG_OFFSET_MSMNT
	int "Offset of the measurement configurations"
	default 40

config BCB_LIB_PERSISTENT_CONFIG_SIZE_MSMNT
	int "Max size of the measurement configurations"
	default 160

config BCB_LIB_PERSISTENT_CONFIG_OFFSET_BCB
	int "Offset of the breaker state configurations"
	default 200

config BCB_LIB_PERSISTENT_CONFIG_SIZE_BCB
	int "Max size of the breaker state configurations"
	default 20

config BCB_LIB_PERSISTENT_CONFIG_OFFSET_TRIP_CURVE_DEFAULT
	int "Offset of the default trip curve configurations"
	default 220
	depends on BCB_TRIP_CURVE_DEFAULT

config BCB_LIB_PERSISTENT_CONFIG_SIZE_TRIP_CURVE_DEFAULT
	int "Max size of the default trip curve configurations"
	default 20
	depends on BCB_TRIP_CURVE_DEFAULT

config BCB_LIB_PERSISTENT_CONFIG_OFFSET_COAP
	int "Offset of the CoAP configurations"
	default 240
	depends on BCB_COAP

config BCB_LIB_PERSISTENT_CONFIG_SIZE_COAP
	int "Max size of the CoAP configurations"
	default 20
	depends on BCB_COAP

endmenu
